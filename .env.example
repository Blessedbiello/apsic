# APSIC Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://apsic_user:apsic_password@localhost:5432/apsic

# ============================================
# API KEYS
# ============================================
# Opus Workflow Engine
OPUS_API_KEY=your_opus_api_key_here
OPUS_API_URL=https://api.opus.example.com

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# SOLANA
# ============================================
SOLANA_RPC_URL=https://api.devnet.solana.com
# For production, use a premium RPC like Helius or QuickNode:
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-key

# SPL Token Mint Address (your Sentinel Incident Credit token)
SIC_TOKEN_MINT=your_spl_token_mint_address_here

# ============================================
# QDRANT (Vector Database)
# ============================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional, only needed for Qdrant Cloud

# ============================================
# OBJECT STORAGE (AWS S3 or Cloudflare R2)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=apsic-uploads
AWS_REGION=us-east-1

# For Cloudflare R2:
# R2_ACCOUNT_ID=your_r2_account_id
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=apsic-uploads

# ============================================
# SERVER CONFIG
# ============================================
NODE_ENV=development  # development | production | test
PORT=4000
FRONTEND_URL=http://localhost:3000

# ============================================
# REDIS (optional, for caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
# For wallet signature verification
JWT_SECRET=your_random_jwt_secret_here  # Generate with: openssl rand -base64 32

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=10   # Max requests per window for incident submission

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # error | warn | info | debug

# ============================================
# WEBHOOK CALLBACKS
# ============================================
OPUS_WEBHOOK_URL=http://localhost:4000/api/webhooks/opus-callback
OPUS_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=  # Sentry error tracking
DATADOG_API_KEY=  # Datadog monitoring
