# APSIC Backend Environment Variables

# Server Configuration
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://apsic:apsic_password@localhost:5432/apsic

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPUS_API_KEY=your_opus_api_key_here
OPUS_API_URL=https://api.opus.com/v1

# Opus Workflow Configuration
# Set to 'true' to use Opus workflow orchestration, 'false' for direct Gemini processing
USE_OPUS_WORKFLOW=false
# Set to 'true' to fall back to direct processing if Opus workflow fails
OPUS_FALLBACK_TO_DIRECT=true
# Callback URL for Opus workflow completion (must be publicly accessible)
OPUS_CALLBACK_URL=http://your-domain.com/api/webhooks/opus-callback

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SIC_TOKEN_MINT=

# Storage (S3/R2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=apsic-uploads
AWS_REGION=us-east-1

# Optional: AI/ML API
AIML_API_KEY=

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}
GOOGLE_SHEETS_ID=your_spreadsheet_id_here

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=APSIC <noreply@apsic.app>

# Observability & Logging (Optional)
LOG_LEVEL=info
AWS_CLOUDWATCH_LOG_GROUP=apsic-logs
AWS_REGION=us-east-1
DATADOG_API_KEY=
